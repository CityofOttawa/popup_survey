{
  // This file is managed by dropfort/dropfort_build.
  // Modifications to this file will be overwritten by default.

  /* Dropfort Defaults */
  "breadcrumbs.enabled": true,
  "css.validate": true,
  "debug.allowBreakpointsEverywhere": true,
  "debug.showBreakpointsInOverviewRuler": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.tabSize": 2,
  "editor.autoIndent": "full",
  "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
  },
  "editor.insertSpaces": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,
  "editor.renderWhitespace": "boundary",
  "editor.wordWrapColumn": 80,
  "editor.wordWrap": "off",
  "editor.detectIndentation": true,
  "editor.rulers": [80],
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 200,
  "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
      "editor.defaultFormatter": "wongjn.php-sniffer",
      "editor.formatOnPaste": false,
      "editor.quickSuggestions": { "comments": true }
  },
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
      "*.inc": "php",
      "*.module": "php",
      "*.install": "php",
      "*.theme": "php",
      "*.tpl.php": "php",
      "*.test": "php",
      "*.php": "php",
      "*.info": "ini",
      "*.html.twig": "twig"
  },
  "emmet.includeLanguages": {
      "twig": "html"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "html.format.enable": true,
  "html.format.wrapLineLength": 80,
  "telemetry.enableTelemetry": false,

  "typescript.suggest.paths": false,

  "telemetry.enableCrashReporter": false,

  /* PHP Settings */
  "php.suggest.basic": false,

  "phpSniffer.run": "onSave",
  "phpSniffer.executablesFolder": "./bin/",
  "phpSniffer.standard": "Drupal,DrupalPractice",

  "intelephense.environment.documentRoot": "web/core/index.php",
  "terminal.integrated.env.osx": {
    "VAGRANT_DOCKER_PROJECT_DIR": "${workspaceFolder}"
  }
}
