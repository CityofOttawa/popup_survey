{% if render %}
  <div class="modal fade" id="popupSurveyModal" tabindex="-1" role="dialog" aria-labelledby="popupSurveyModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="popupSurveyModalTitle">{{ popup_title }}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          {{ popup_body }}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ cancel_link_title }}</button>
          <a id="popupSurveyAccept" role="button" class="btn btn-primary" target="_blank" href="{{ survey_link|escape }}">{{ survey_link_title }}</a>
        </div>
      </div>
    </div>
  </div>
{% endif %}
